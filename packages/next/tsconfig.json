{
  "compilerOptions": {
    "target": "esNEXT",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@": ["."],
      "@/*": ["./*"],
      "@/atoms/*": ["./src/atoms/*"],
      "@/components/*": ["./src/components/*"],
      "@/graphql/*": ["./graphql/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/pages/*": ["./pages/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/types/*": ["./src/types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["./.declares/next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
